{
  "name": "cftp",
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"tsc -p tsconfig.electron.json -w --preserveWatchOutput\" \"wait-on http://127.0.0.1:5173 dist-electron/main.js dist-electron/preload.js && electron .\"",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "pack:win": "npm run build && electron-builder --win --x64",
    "dist:win": "npm run build && electron-builder --win --x64 --publish never"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Simple Windows SSH tunnel + drag/drop SFTP utility",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/ssh2": "^1.15.5",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "ssh2": "^1.17.0"
  },
  "build": {
    "appId": "com.cftp.app",
    "productName": "CFTP",
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
